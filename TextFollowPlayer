using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using Photon.Pun;

public class followPlayer : MonoBehaviour
{
    public GameObject player;
    void Update()
    {
        transform.position = Camera.main.GetComponent<Camera>().WorldToScreenPoint(new Vector3(player.transform.position.x+12, player.transform.position.y + Vector3.up.y-5, player.transform.position.z));
    }
}
